<Window x:Class="IskolaGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IskolaGUI"
        mc:Ignorable="d"
        Title="Iskola GUI" Height="474" Width="284" ResizeMode="NoResize">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
        <ListBox x:Name="tanulok" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="229" Height="350" RenderTransformOrigin="0.502,0.514" Margin="0,10,0,0"/>
        <Button x:Name="törles" Content="Törlés" Margin="0,383,127,-39" Click="törles_Click" />
        <Button x:Name="mentes" Content="Állomány mentése" Margin="127,383,0,-39" Click="mentes_Click" />
    </Grid>
</Window>
